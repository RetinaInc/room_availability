= simple_form_for(@availability_query, :url => search_path, :html => { :class => "form-inline" } ) do |f|
	- if @availability_query.errors.any?
		#error_explanation
			%h2
				= "Invalid search (#{pluralize(@availability_query.errors.count, "error")}):"
			%ul
				- @availability_query.errors.full_messages.each do |msg|
					%li= msg					
	= f.label :start_date, :class => 'datepicker'
	= f.text_field :start_date, :class => "datepicker input-small"

	= f.label :end_date, :class => 'datepicker'
	= f.text_field :end_date, :class => "datepicker input-small"

	= f.label :guests
	= f.number_field :guests, :min => 1, :class => 'input-small'
	
	= f.submit "Search", :class => 'btn btn-inverse'